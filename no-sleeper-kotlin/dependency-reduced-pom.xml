<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.example</groupId>
  <artifactId>no-sleeper-kotlin</artifactId>
  <name>NoSleeper</name>
  <version>1.0.0-SNAPSHOT</version>
  <build>
    <sourceDirectory>src/main/kotlin</sourceDirectory>
    <testSourceDirectory>src/test/kotlin</testSourceDirectory>
    <plugins>
      <plugin>
        <groupId>org.jetbrains.kotlin</groupId>
        <artifactId>kotlin-maven-plugin</artifactId>
        <version>1.8.21</version>
        <executions>
          <execution>
            <id>compile</id>
            <phase>compile</phase>
            <goals>
              <goal>compile</goal>
            </goals>
          </execution>
          <execution>
            <id>test-compile</id>
            <phase>test-compile</phase>
            <goals>
              <goal>test-compile</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <artifactId>maven-compiler-plugin</artifactId>
      </plugin>
      <plugin>
        <artifactId>maven-shade-plugin</artifactId>
        <executions>
          <execution>
            <phase>package</phase>
            <goals>
              <goal>shade</goal>
            </goals>
            <configuration>
              <shadedArtifactAttached>true</shadedArtifactAttached>
              <shadedClassifierName>${shaded.name}</shadedClassifierName>
              <transformers>
                <transformer>
                  <manifestEntries>
                    <Main-Class>${main.class}</Main-Class>
                  </manifestEntries>
                </transformer>
              </transformers>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>com.akathist.maven.plugins.launch4j</groupId>
        <artifactId>launch4j-maven-plugin</artifactId>
        <version>2.4.1</version>
        <executions>
          <execution>
            <id>l4j-cli</id>
            <phase>package</phase>
            <goals>
              <goal>launch4j</goal>
            </goals>
            <configuration>
              <chdir>.</chdir>
              <headerType>gui</headerType>
              <stayAlive>true</stayAlive>
              <outfile>${output.bin.dir}/${exe.name}.exe</outfile>
              <jar>${project.build.directory}/${artifactId}-${version}-${shaded.name}.jar</jar>
              <errTitle>App Err</errTitle>
              <classPath>
                <mainClass>${exe.main.class}</mainClass>
                <preCp>anything</preCp>
              </classPath>
              <singleInstance>
                <mutexName>${project.name}</mutexName>
                <windowTitle>${project.name}</windowTitle>
              </singleInstance>
              <icon>src/main/resources/icon.ico</icon>
              <jre>
                <path>%PATH%</path>
              </jre>
              <versionInfo>
                <txtFileVersion>${project.version}</txtFileVersion>
                <fileDescription>${project.name}</fileDescription>
                <productName>${project.name}</productName>
                <companyName>PGA</companyName>
                <internalName>${exe.name}</internalName>
                <originalFilename>${exe.name}.exe</originalFilename>
              </versionInfo>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>
  <properties>
    <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    <main.class>pga.no.sleeper.Main</main.class>
    <exe.main.class>pga.no.sleeper.MainExe</exe.main.class>
    <maven.compiler.source>17</maven.compiler.source>
    <shaded.name>shaded</shaded.name>
    <kotlin.compiler.incremental>true</kotlin.compiler.incremental>
    <kotlin.compiler.jvmTarget>17</kotlin.compiler.jvmTarget>
    <output.bin.dir>bin</output.bin.dir>
    <exe.name>no-sleeper-kotlin</exe.name>
    <maven.compiler.target>17</maven.compiler.target>
    <kotlin.code.style>official</kotlin.code.style>
  </properties>
</project>
